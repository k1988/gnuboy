
include Version

OBJS = lcd.o lcdc.o palette.o cpu.o mem.o hw.o sound.o \
	events.o keytable.o \
	loader.o save.o debug.o emu.o main.o \
	rccmds.o rckeys.o rcvars.o rcfile.o exports.o \
	split.o path.o

INCS = -I.

MYCC = $(CC) $(CFLAGS) $(INCS) $(SYS_INCS) $(SYS_DEFS)
MYAS = $(AS) $(ASFLAGS) $(INCS) $(SYS_INCS) $(SYS_DEFS)

main.o: Version

render_1.o: render_n.c
	$(MYCC) -DPELSIZE=1 -c $< -o $@
render_2.o: render_n.c
	$(MYCC) -DPELSIZE=2 -c $< -o $@
render_4.o: render_n.c
	$(MYCC) -DPELSIZE=4 -c $< -o $@

%.o: %.c
	$(MYCC) -c $< -o $@

%.o: %.s
	$(MYAS) -c $< -o $@










